# Domains (IMPORTANTE: Altere para suas URLs)
FRONTEND_DOMAIN=app.seudominio.com
BACKEND_DOMAIN=api.seudominio.com
FRONTEND_URL=https://app.seudominio.com

# Docker Hub (necessário apenas para build/deploy)
DOCKER_HUB_TOKEN=seu-docker-hub-token

# Database
POSTGRES_PASSWORD=sua-senha-segura-postgres

# JWT
JWT_SECRET=sua-chave-secreta-jwt-muito-segura

# AWS S3 (Será fornecido posteriormente)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=seu-access-key-id
AWS_SECRET_ACCESS_KEY=seu-secret-access-key
AWS_S3_BUCKET=seu-bucket-name

# SMTP (Será fornecido posteriormente)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app
SMTP_FROM=noreply@seudominio.com
